<%- include("partials/homenavbar.ejs") %>

<body>
    <div class="container">
        <h1 class="display-4">Bem vindo ao GuiaPress</h1>
        <p class="lead">Blog especializado em tecnologia</p>
        <hr>
        <% articles.forEach((article) => { %>
         <div class="card">
             <div class="card-header">
                 <h2><%= article.title %></h2>
             </div>
             <div class="card-body">
                 <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
             </div>
         </div>
      <%  }) %>
      <div class="row">
          <div class="col col-12">
            <a href="/articles/page/2" style="float: right;">Next</a>
        </div>
         
      </div>
    </div>
</body>

