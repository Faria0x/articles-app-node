<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>

        <div class="card-body">
            <form action="/articles/save" method="POST">
                <input class="form-control" type="text" name="title" id="" placeholder="Defina o tÃ­tulo da artigo"> <br>
                <textarea name="body" id="article" placeholder="Escreva aqui o artigo" class="form-control"></textarea>
                <label for="">Categoria</label>
                <select name="category" id="" class="form-control">
                    <% categories.forEach((category) => { %>
                        <option class="form-control" value="<%= category.id %>"><%= category.title %></option>
                  <%  }) %>
                </select> <br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
</div>
</div>

